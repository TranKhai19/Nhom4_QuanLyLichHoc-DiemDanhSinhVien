@model List<StudentAttendanceMVC.Models.ClassSession>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h3>Xem Lịch Học Hôm Nay & Trạng Thái Điểm Danh (Sinh Viên)</h3>
            </div>
            <div class="card-body">
                <p><strong>Hôm nay:</strong> @DateTime.Today.ToShortDateString()</p>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Môn Học</th>
                                <th>Ngày</th>
                                <th>Giờ</th>
                                <th>Phòng</th>
                                <th>Trạng Thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cls in Model.Where(c => c.Date.Date == DateTime.Today.Date))
                            {
                                <tr>
                                    <td><strong>@cls.CourseName</strong></td>
                                    <td>@cls.Date.ToShortDateString()</td>
                                    <td>@cls.Time</td>
                                    <td>@cls.Room</td>
                                    <td>
                                        @foreach (var student in cls.Students)
                                        {
                                            <span class="badge @(student.Attended ? "bg-success" : "bg-danger")">
                                                @(student.Attended ? "Có" : "Vắng")
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
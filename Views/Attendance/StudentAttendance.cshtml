@model List<StudentAttendanceMVC.Models.ClassSession>

<div class="row justify-content-center">
    <div class="col-12 col-md-10">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Xem Lịch Học Hôm Nay & Trạng Thái Điểm Danh</h3>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3"><strong>Hôm nay:</strong> @DateTime.Today.ToShortDateString()</p>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Môn Học</th>
                                <th>Ngày</th>
                                <th>Giờ</th>
                                <th>Phòng</th>
                                <th>Trạng Thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cls in Model.Where(c => c.Date.Date == DateTime.Today.Date))
                            {
                                <tr>
                                    <td><strong class="text-primary">@cls.CourseName</strong></td>
                                    <td>@cls.Date.ToShortDateString()</td>
                                    <td>@cls.Time</td>
                                    <td>@cls.Room</td>
                                    <td>
                                        <div class="d-flex gap-2 flex-wrap">
                                            @foreach (var student in cls.Students)
                                            {
                                                <span class="badge @(student.Attended ? "bg-success" : "bg-danger")">
                                                    @(student.Attended ? "Có" : "Vắng")
                                                </span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
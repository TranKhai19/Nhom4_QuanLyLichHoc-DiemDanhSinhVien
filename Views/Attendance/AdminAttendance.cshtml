@model List<StudentAttendanceMVC.Models.ClassSession>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h3>Quản Lý Điểm Danh (Ban Quản Lý)</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Chọn lớp để xem và tải:</label>
                    <select class="form-select" id="adminClassId" onchange="loadAdminClass()">
                        <option value="">-- Chọn Lớp --</option>
                        @foreach (var cls in Model)
                        {
                            <option value="@cls.Id">@cls.CourseName - @cls.Date.ToShortDateString()</option>
                        }
                    </select>
                </div>
                <div id="adminStudentList" style="display:none;">
                    <h5 id="adminClassTitle"></h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="adminTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Tên Sinh Viên</th>
                                    <th>Trạng Thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Nội dung sẽ load bằng JS hoặc Razor -->
                            </tbody>
                        </table>
                    </div>
                    <button class="btn btn-info" onclick="downloadFile()">Tải File Điểm Danh</button>
                    <div id="downloadMessage" class="alert alert-info mt-3" style="display:none;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function loadAdminClass() {
        var classId = document.getElementById('adminClassId').value;
        if (classId) {
            // Giả lập load dữ liệu (sau này AJAX)
            document.getElementById('adminStudentList').style.display = 'block';
            document.getElementById('adminClassTitle').innerText = 'Điểm Danh Lớp: Lớp ID ' + classId;
            // Thêm dữ liệu giả lập vào table (sau này từ backend)
            var tbody = document.querySelector('#adminTable tbody');
            tbody.innerHTML = `
                <tr><td>Sinh viên X</td><td><span class="badge bg-success">Có</span></td></tr>
                <tr><td>Sinh viên Y</td><td><span class="badge bg-danger">Vắng</span></td></tr>
            `;
        }
    }

    function downloadFile() {
        document.getElementById('downloadMessage').innerText = 'File điểm danh đã được tải (giả lập: attendance.csv)';
        document.getElementById('downloadMessage').style.display = 'block';
    }
</script>
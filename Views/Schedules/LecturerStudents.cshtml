@model List<StudentAttendanceMVC.Models.ClassSession>

<div class="row justify-content-center">
    <div class="col-12 col-md-10">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Danh Sách Sinh Viên Trong Lớp Dạy</h3>
                <form asp-action="LecturerStudents" method="get" class="d-flex gap-2 mt-3">
                    <select name="classId" class="form-select" onchange="this.form.submit()">
                        <option value="">Chọn lớp</option>
                        @foreach (var cls in ViewBag.ClassSessions ?? new List<StudentAttendanceMVC.Models.ClassSession>())
                        {
                            <option value="@cls.Id" selected="@(ViewBag.ClassId == cls.Id ? "selected" : null)">
                                @cls.CourseName - @cls.Date.ToString("dd/MM/yyyy")
                            </option>
                        }
                    </select>
                </form>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    foreach (var cls in Model)
                    {
                        <div class="card mb-3">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Lớp: @cls.CourseName (@cls.Date.ToString("dd/MM/yyyy"), @cls.Time, @cls.Room)</h5>
                            </div>
                            <div class="card-body">
                                <form asp-action="TakeAttendance" method="post" class="needs-validation" novalidate>
                                    <input type="hidden" name="classId" value="@cls.Id" />
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Tên Sinh Viên</th>
                                                    <th>Điểm Danh</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (cls.Students != null && cls.Students.Any())
                                                {
                                                    for (int i = 0; i < cls.Students.Count; i++)
                                                    {
                                                        var student = cls.Students[i];
                                                        <tr>
                                                            <td>@student.Name</td>
                                                            <td>
                                                                <div class="form-check">
                                                                    <input type="checkbox" class="form-check-input" name="studentIds" value="@student.Id" checked="@student.Attended" />
                                                                    <input type="hidden" name="attendedStatuses" value="@student.Attended.ToString().ToLower()" />
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="2" class="text-center text-muted">Không có sinh viên nào trong lớp này.</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100 mt-3">Lưu Điểm Danh</button>
                                </form>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-muted">Không có lớp hoặc sinh viên nào.</p>
                }
            </div>
        </div>
    </div>
</div>
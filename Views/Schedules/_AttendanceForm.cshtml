@model StudentAttendanceMVC.Models.ClassSession

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="attendanceModalLabel-@Model.Id">Điểm Danh - @Model.CourseName (@Model.Date.ToString("dd/MM/yyyy"))</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form asp-action="TakeAttendance" method="post" class="needs-validation" novalidate>
                <input type="hidden" name="classId" value="@Model.Id" />
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Tên Sinh Viên</th>
                                <th>Điểm Danh</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Students != null && Model.Students.Any())
                            {
                                @for (int i = 0; i < Model.Students.Count; i++)
                                {
                                    var student = Model.Students[i];
                                    <tr>
                                        <td>@student.Name</td>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" name="studentIds" value="@student.Id" checked="@student.Attended" />
                                                <input type="hidden" name="attendedStatuses" value="@student.Attended.ToString().ToLower()" />
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-muted">Không có sinh viên nào trong lớp này.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-success">Lưu Điểm Danh</button>
                </div>
            </form>
        </div>
    </div>
</div>
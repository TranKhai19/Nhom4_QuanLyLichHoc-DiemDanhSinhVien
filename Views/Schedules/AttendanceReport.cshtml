@model List<dynamic>

<div class="row justify-content-center">
    <div class="col-12 col-md-10">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Báo Cáo Điểm Danh</h3>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("DownloadAttendanceExcel", new { classId = 0 })" class="btn btn-success">Tải Excel Toàn Bộ</a>
                    <form asp-action="ResetAttendance" method="post" class="d-inline">
                        <button type="submit" class="btn btn-warning" onclick="return confirm('Bạn có chắc muốn reset toàn bộ điểm danh?')">Reset Toàn Bộ</button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Tên Sinh Viên</th>
                                    <th>Lớp Học</th>
                                    <th>Ngày</th>
                                    <th>Trạng Thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.StudentName</td>
                                        <td>@item.ClassName</td>
                                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge @(item.Attended ? "bg-success" : "bg-danger")">
                                                @(item.Attended ? "Có" : "Vắng")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">Không có dữ liệu điểm danh.</p>
                }
            </div>
        </div>
    </div>
</div>
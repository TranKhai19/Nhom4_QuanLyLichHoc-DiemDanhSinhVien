@model List<StudentAttendanceMVC.Models.Schedule>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3>Lịch học của Sinh Viên</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Môn Học</th>
                                <th>Sinh Viên</th>
                                <th>Ngày</th>
                                <th>Giờ</th>
                                <th>Phòng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model)
                            {
                                <tr>
                                    <td><strong>@schedule.CourseName</strong></td>
                                    <td>@schedule.StudentName</td>
                                    <td>@schedule.Date.ToShortDateString()</td>
                                    <td>@schedule.Time</td>
                                    <td>@schedule.Room</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>